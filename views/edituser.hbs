{{> menu id="edituser"}}

<form class="ui stacked segment form" action="/updateUser" method="POST">
  <h3 class="ui header">{{title}}</h3>
  <div class="two fields">
    <div class="field">
      <label>First Name</label>
      <input placeholder="First Name" type="text" name="firstName" value="{{firstName}}" required>
    </div>
    <div class="field">
      <label>Last Name</label>
      <input placeholder="Last Name" type="text" name="lastName" value="{{lastName}}" required>
    </div>
  </div>
  <div class="field">
    <label>Email</label>
    <input placeholder="Email" type="email" name="email" value="{{email}}" required>
  </div>
  <div class="field">
    <label>Old Password</label>
    <input type="password" name="oldpassword" value="" maxlength="10" minlength="4" required>
  </div>
  <div class="field">
    <label>New Password</label>
    <input type="password" name="newpassword" maxlength="10" minlength="4" required>
  </div>
  <div class="field">
    <label>New Password Confirm</label>
    <input type="password" name="confirmpassword" maxlength="10" minlength="4" required>
  </div>
  <button class="ui blue submit button">Submit</button>
</form>