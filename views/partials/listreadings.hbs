<table class="ui table">
  <thead>
  <tr>
    <th>Date/Time</th>
    <th>Code</th>
    <th>Temp</th>
    <th>Wind Speed</th>
    <th>Wind Direction</th>
    <th>Pressure</th>
    <th>-</th>
  </tr>
  </thead>
  <tbody>
  {{#each station.readings}}
    <tr>
      <td>
        {{readingDate}}
      </td>
      <td>
        {{code}}
      </td>
      <td>
        {{temperature}}
      </td>
      <td>
        {{windSpeed}}
      </td>
      <td>
        {{windDirection}}
      </td>
      <td>
        {{pressure}}
      </td>

      <td>
        <a href="/station/{{../station.id}}/deletereading/{{id}}" class="ui icon button"> <i
          class="trash icon"></i></a>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>